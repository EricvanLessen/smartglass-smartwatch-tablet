<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="essetials.android.com.hmi.idEingabe"
    android:background="#ffffff">

    <Button
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:text="@string/weiter"
        android:id="@+id/id_Eingabe_Button"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/id_Eingabe_EditText"
        android:layout_centerHorizontal="true"
        android:onClick="clickOnIDButton"
        android:background="@drawable/buttonclearing"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idEingabe_string"
        android:id="@+id/idEingabeString"
        android:layout_above="@+id/id_Eingabe_Button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp"
        android:textSize="20sp"
        android:textColor="#000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/id_Eingabe_EditText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/id_Eingabe_Button"
        android:layout_alignStart="@+id/id_Eingabe_Button" />
</RelativeLayout>
