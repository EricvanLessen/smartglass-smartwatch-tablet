<?xml version="1.0" encoding="utf-8"?>


<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="essetials.android.com.hmi.optionActivity">

    <Space
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_row="5"
        android:layout_column="2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Löschen:"
        android:id="@+id/textView3"
        android:layout_column="5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="4" />

    <Space
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="6" />

    <Space
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="10" />

    <Space
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="8" />

    <Space
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_row="0"
        android:layout_column="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ID:"
        android:id="@+id/textView6"
        android:layout_column="5"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="6" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_options_id_show"
        android:layout_column="7"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/button_id_Options_Part1"
        android:layout_alignStart="@+id/button_id_Options_Part1"
        android:layout_row="6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Versuchsteil"
        android:id="@+id/textView4"
        android:layout_column="5"
        android:layout_alignBottom="@+id/button_id_Options_Part1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="7" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_id_Options_Part1"
        android:layout_column="7"
        android:onClick="OnClickPart1"
        android:layout_below="@+id/editText_options_id_show"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_row="7"
        android:text="Teil 1" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Teil 2"
        android:id="@+id/button_id_Options_Part2"
        android:layout_column="9"
        android:onClick="OnClickPart2"
        android:nestedScrollingEnabled="true"
        android:layout_alignBaseline="@+id/button_id_Options_HMI"
        android:layout_alignBottom="@+id/button_id_Options_HMI"
        android:layout_toRightOf="@+id/button_id_Options_Part1"
        android:layout_toEndOf="@+id/button_id_Options_Part1"
        android:layout_row="7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Modalität"
        android:id="@+id/textView5"
        android:layout_column="5"
        android:layout_above="@+id/buttonEmptyDB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="8" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="HMI"
        android:id="@+id/button_id_Options_HMI"
        android:layout_column="7"
        android:onClick="OnClickHMI"
        android:layout_below="@+id/button_id_Options_Part1"
        android:layout_toLeftOf="@+id/button_id_Options_Part2"
        android:layout_toStartOf="@+id/button_id_Options_Part2"
        android:layout_row="8" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Brille"
        android:id="@+id/button_id_Options_Glasses"
        android:layout_column="9"
        android:onClick="OnClickGlasses"
        android:layout_below="@+id/button_id_Options_Part2"
        android:layout_alignLeft="@+id/button_id_Options_Part2"
        android:layout_alignStart="@+id/button_id_Options_Part2"
        android:layout_row="8" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Watch"
        android:id="@+id/button_id_Options_Watch"
        android:layout_column="11"
        android:onClick="OnClickWatch"
        android:layout_below="@+id/button_id_Options_Part2"
        android:layout_toRightOf="@+id/button_id_Options_Part2"
        android:layout_toEndOf="@+id/button_id_Options_Part2"
        android:layout_row="8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alles zur ID"
        android:id="@+id/textView7"
        android:layout_column="5"
        android:layout_alignBottom="@+id/buttonEmptyDB"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="11" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Datensatz"
        android:id="@+id/buttonEmptyDB"
        android:layout_column="7"
        android:onClick="OnClickDatabase"
        android:layout_below="@+id/button_id_Options_HMI"
        android:layout_alignLeft="@+id/button_id_Options_HMI"
        android:layout_alignStart="@+id/button_id_Options_HMI"
        android:layout_row="11" />

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_row="13"
        android:layout_column="3" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Bestätigen"
        android:id="@+id/button_id_Options_Confirm2"
        android:layout_column="11"
        android:onClick="OnClickConfirm2"
        android:layout_below="@+id/buttonExportDB"
        android:layout_alignLeft="@+id/button_id_Options_Confirm1"
        android:layout_alignStart="@+id/button_id_Options_Confirm1"
        android:layout_row="12" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Datenbank:"
        android:id="@+id/textView11"
        android:layout_column="5"
        android:layout_below="@+id/button_id_Options_Confirm1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="14" />

    <Space
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_row="15"
        android:layout_column="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Operation"
        android:id="@+id/textView9"
        android:layout_column="5"
        android:layout_alignBottom="@+id/buttonEmptyDBAll"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_row="16" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Leeren"
        android:id="@+id/buttonEmptyDBAll"
        android:layout_column="7"
        android:onClick="OnClickEmpty"
        android:layout_alignTop="@+id/space"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_row="16" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Export"
        android:id="@+id/buttonExportDB"
        android:layout_column="9"
        android:onClick="OnClickExport"
        android:layout_alignTop="@+id/buttonEmptyDBAll"
        android:layout_toRightOf="@+id/buttonEmptyDBAll"
        android:layout_toEndOf="@+id/buttonEmptyDBAll"
        android:layout_row="16" />

    <Space
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_row="10"
        android:layout_column="4" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Bestätigen"
        android:id="@+id/button_id_Options_Confirm1"
        android:layout_column="11"
        android:onClick="OnClickConfirm1"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/button_id_Options_Watch"
        android:layout_alignStart="@+id/button_id_Options_Watch"
        android:layout_row="9" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bestätigen"
        android:id="@+id/button_id_Options_Confirm3"
        android:layout_row="17"
        android:layout_column="11"
        android:onClick="OnClickConfirm3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Passwort:"
        android:id="@+id/textView"
        android:layout_row="18"
        android:layout_column="5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_passwort"
        android:layout_row="18"
        android:layout_column="7" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button_goBack"
        android:layout_row="19"
        android:layout_column="5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Neu starten"
        android:id="@+id/buttonNeustart"
        android:layout_row="13"
        android:layout_column="5" />
</GridLayout>
