<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="essetials.android.com.hmi.continueActivity"
    android:background="#ffffff"
    android:id="@+id/layout_activity_continue">

    <TextView
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_textView_fortfahren"
        android:id="@+id/id_textView_fortfahren"
        android:layout_alignParentTop="true"
        android:textColor="#000"
        android:layout_marginTop="40dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:text="@string/text_button_fortfahren"
        android:id="@+id/id_button_fortfahren"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_below="@+id/id_textView_fortfahren"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:onClick="button_continue_ClickHandler"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:background="@drawable/buttonclearing"
        android:textAllCaps="false" />

</RelativeLayout>
